@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["width"] = "110";
    ViewData["height"] = "70";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section class="h-100 p-3 bg-light border rounded-3">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <center>
                    <partial name="_FeyaLogo" view-data="ViewData" />
                    <h1 class="h3 mb-3 fw-normal">FEYA Sign in</h1>
                    <hr />
                </center>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" placeholder="david@gmail.com"  aria-required="true" />
                    <label asp-for="Input.Username"></label>
                    <span asp-validation-for="Input.Username" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Firstname" class="form-control" placeholder="david@gmail.com"  aria-required="true" />
                    <label asp-for="Input.Firstname"></label>
                    <span asp-validation-for="Input.Firstname" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Lastname" class="form-control" placeholder="david@gmail.com"  aria-required="true" />
                    <label asp-for="Input.Lastname"></label>
                    <span asp-validation-for="Input.Lastname" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="david@gmail.com"  aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmEmail" class="form-control" placeholder="david@gmail.com"  aria-required="true" />
                    <label asp-for="Input.ConfirmEmail"></label>
                    <span asp-validation-for="Input.ConfirmEmail" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger form-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" asp-for="Input.Role">
                        <option value="">Select your Role</option>
                        <option value="Fairy">Fairy</option>
                        <option value="Cinderella">Cinderella</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                    <span asp-validation-for="Input.Role" class="text-danger form-text"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="Input.Over18" class="form-check-input" type="checkbox">
                    <label asp-for="Input.Over18" class="form-check-label">
                        18 years old?
                    </label>
                    <span asp-validation-for="Input.Over18" class="text-danger form-text"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Create Account</button>
                <div>
                    <p class="text-muted">
                        Have an account already? <a class="form-text" asp-page="./Login">Login here</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>

