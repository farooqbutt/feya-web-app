
@{
    ViewData["Title"] = "Wishes";
}
<style>
    .list-group-item {
        height:60px;
    }
    a{
        text-decoration:none;
    }
    /*i{
        font-size:25px;
    }*/
</style>

<h1>Wishes</h1>

<div class="col-md-5">
    <ul class="list-group mb-5">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="fw-bold">
                <a asp-area="" asp-controller="Wishes" asp-action="PendingWishes">
                    <i class="bi bi-clock"></i> Pending Wishes
                </a>
            </div>
            <span class="badge bg-primary rounded-pill">@ViewBag.PendingWishes</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="fw-bold">
                <a asp-area="" asp-controller="Wishes" asp-action="ActiveWishes">
                    <i class="bi bi-check-circle"></i> Active Wishes
                </a>
            </div>
            <span class="badge bg-primary rounded-pill">@ViewBag.ActiveWishes</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="fw-bold">
                <a asp-area="" asp-controller="Wishes" asp-action="FulfilledWishes">
                    <i class="bi bi-box-seam"></i> Fulfilled Wishes
                </a>
            </div>
            <span class="badge bg-primary rounded-pill">@ViewBag.FulfilledWishes</span>
        </li>
    </ul>

    @if(User.IsInRole("Cinderella")){
        <a href="/Home/Cinderella" class="btn btn-info"><i class="bi bi-plus-lg"></i> Create New Wish</a>
    }
    @if(User.IsInRole("Fairy"))
    {
        <a href="/Wishes/ActiveWishes" class="btn btn-info"><i class="bi bi-arrow-left"></i> Go Back to Wishes</a>
    }

</div>
